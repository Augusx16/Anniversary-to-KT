  <script>
    function openSafe() {
      document.getElementById('safe').style.display = 'block';
    }

    function unlockSafe() {
      const correctCode = '6533';
      const input = document.getElementById('code').value;

      if (input === correctCode) {
        document.getElementById('safe').style.display = 'none';
        document.getElementById('secret').style.display = 'block';
        launchFireworks();
      } else {
        document.getElementById('error').style.display = 'block';
      }
    }

    function launchFireworks() {
      for (let i = 0; i < 20; i++) {
        const fw = document.createElement('div');
        fw.className = 'firework';
        fw.textContent = 'üíñ';
        fw.style.setProperty('--x', `${(Math.random() - 0.5) * 300}px`);
        fw.style.setProperty('--y', `${(Math.random() - 0.5) * 300}px`);
        document.body.appendChild(fw);
        setTimeout(() => fw.remove(), 1200);
      }
    }
    
  </script>
